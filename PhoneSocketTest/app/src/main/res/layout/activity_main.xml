<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
        <TextView
            android:id="@+id/tv_get_ip"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="获取连接热点设备的ip"
            android:layout_margin="15dp"/>
        <TextView
            android:id="@+id/ip_info"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="ip"
            android:layout_margin="15dp"/>
    </LinearLayout>
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
        <TextView
            android:id="@+id/begin_connect"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="获取当前屏幕分辨率"
            android:layout_margin="15dp"/>
        <TextView
            android:id="@+id/connect_result"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="结果"
            android:layout_margin="15dp"/>
    </LinearLayout>
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
        <TextView
            android:id="@+id/send_message"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="发送数据"
            android:layout_margin="15dp"/>
        <TextView
            android:id="@+id/message_info"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="这是手机端发送的数据"
            android:layout_margin="15dp"/>
    </LinearLayout>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
        <TextView
            android:id="@+id/begin_screen"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="投屏"
            android:layout_margin="15dp"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text=""
            android:layout_margin="15dp"/>
    </LinearLayout>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="接收到的数据"
            android:layout_margin="15dp"/>
        <TextView
            android:id="@+id/get_message_resul"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="接收到的数据解析结果"
            android:layout_margin="15dp"/>
    </LinearLayout>


</LinearLayout>